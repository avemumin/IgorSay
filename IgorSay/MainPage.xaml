<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IgorSay.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="Black">

    <Grid
        Padding="10"
        RowDefinitions="Auto,4*,1*">

        <!--  Nagłówek z sekretnym tapnięciem  -->
        <Label
            Grid.Row="0"
            FontSize="28"
            HorizontalOptions="Center"
            Text="Igor Mówi"
            TextColor="LimeGreen"
            VerticalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSecretTapped" />
            </Label.GestureRecognizers>
        </Label>

        <!--  Lewa część: monitor  -->
        <Border
            Grid.Row="1"
            BackgroundColor="#002200"
            Stroke="LimeGreen"
            StrokeThickness="4">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <Border.Content>
                <ContentView
                    x:Name="MainContentView"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill" />
            </Border.Content>
        </Border>

        <!--  Prawa część: panel z przyciskami  -->
        <VerticalStackLayout
            Grid.Row="2"
            Padding="10"
            Spacing="20"
            VerticalOptions="Center">

            <Button
                BackgroundColor="LimeGreen"
                Clicked="OnAddClicked"
                CornerRadius="5"
                FontFamily="Courier"
                FontSize="18"
                Text="Dodaj"
                TextColor="Black" />

            <!--  Panel logowania moderatora (ukryty do czasu 7 tapnięć)  -->
            <HorizontalStackLayout
                x:Name="ModeratorLoginPanel"
                HorizontalOptions="Center"
                IsVisible="False"
                Spacing="10">

                <Entry
                    x:Name="ModeratorEntry"
                    Placeholder="Login"
                    PlaceholderColor="Gray"
                    TextColor="White"
                    WidthRequest="120" />

                <Entry
                    x:Name="PasswordEntry"
                    IsPassword="true"
                    Placeholder="Hasło"
                    PlaceholderColor="Gray"
                    TextColor="White"
                    WidthRequest="120" />

                <Button
                    BackgroundColor="DarkRed"
                    Clicked="OnPasswordSubmit"
                    Text="OK"
                    TextColor="White"
                    WidthRequest="80" />
            </HorizontalStackLayout>

        </VerticalStackLayout>

    </Grid>
</ContentPage>
